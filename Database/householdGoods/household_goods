create table household_goods (
    id int primary key generated by default as identity,
    articul int not null,
    name varchar not null,
    price int not null,
    updated_time timestamp not null
);

create index household_goods_updated_time_articul_name
    on household_goods(updated_time, articul, name);

alter table household_goods add column cat_id int references household_goods_category(id) ON DELETE SET NULL;
